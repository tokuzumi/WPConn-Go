# Configuração de Domínios (Traefik)
DOMAIN_API=api.yourdomain.com
DOMAIN_APP=app.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wpp_connect
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/wpp_connect

# Backend API
APP_SECRET=your_generated_secret_key
WEBHOOK_VERIFY_TOKEN=your_meta_verify_token
API_V1_STR=/api/v1
# CORS: List of allowed origins (Frontend domains)
BACKEND_CORS_ORIGINS=["https://app.yourdomain.com"]

# MinIO (Optional if using local storage service)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=whatsapp-media
MINIO_USE_SSL=False

# Frontend Dashboard
# Note: NEXT_PUBLIC_API_URL is constructed in docker-compose.prod.yml using DOMAIN_API
# NEXTAUTH_URL is constructed using DOMAIN_APP
NEXTAUTH_SECRET=your_nextauth_secret_key
